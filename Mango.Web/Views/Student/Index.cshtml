@model List<onlineshopping.Models.Student>

    <div class="row">
    <a asp-action="Create" class="btn btn-primary btn-md col-md-2" >
        <i class="fas fa-plus"></i>
        افزودن دانش اموز جدید
    </a>
    <br />
    <div class="col-md-12">
       <table class="table table-striped table-hover">
           <thead>
               <tr>
                    <th>StudentId</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                   <th>BirhDate</th>
                   <th>TellNumber</th>
                   <th>CellPhone</th>
                   <th>Addrss</th>
                   <th>FatherName</th> 
                   <th></th>
               </tr>
           </thead>
           <tbody>
               @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StudentId</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.BirthDate.ToString("d")</td>
                        <td>@item.TellNumber</td>
                        <td>@item.CellPhone</td>
                        <td>@item.Address</td>
                        <td>@item.FatherName</td>
                        <td>
                            <a href="/Student/edit?studentid=@item.StudentId" class="btn btn-outline-danger">
                                <i class="fas fa-edit"> </i>
                                ویرایش</a>

                            <a asp-controller="Student" asp-action="Delete" asp-route-id=@item.StudentId class="btn btn-outline-warning  btn-group ">
                                <i class="fas fa-trash"> </i>
                                حذف
                            </a>
                        </td>
                    </tr>
                }
           </tbody>
       </table>
    </div>
    </div>
    