@model Student
<form action="/Student/Delete" method="post" asp-antiforgery="true">
    <input type="hidden" asp-for="StudentId" />
    <div class="row col-md-12">
        <div class="form-group col-md-3">
            <label class="form-label">
                نام
                <input type="text" disabled asp-for="FirstName" autocomplete="off" />
            </label>
        </div>
        <div class="form-group col-md-3">
            <label class="form-label">
                نام خانوادگی
                <input type="text" disabled asp-for="LastName" autocomplete="off" />
            </label>
        </div>
        <div class="form-group col-md-3">
            <label class="form-label">
                نام پدر
                <input type="text" disabled asp-for="FatherName" autocomplete="off" />
            </label>
        </div>
        <div class="form-group col-md-3">
            <label class="form-label">
                تاریخ تولد
                <input type="date" disabled asp-for="BirthDate" autocomplete="off" />
            </label>
        </div>
        <div class="form-group col-md-3">
            <label class="form-label">
                شماره تلفن
                <input type="tel" disabled asp-for="TellNumber" autocomplete="off" />
            </label>
        </div>
        <div class="form-group col-md-3">
            <label class="form-label">
                شماره منزل
                <input type="tel" disabled asp-for="CellPhone" autocomplete="off" />
            </label>
        </div>
        <div class="form-group col-md-3">
            <label class="form-label">
                آدرس
                <input type="text" disabled asp-for="Address" autocomplete="off" />
            </label>
        </div>
    </div>
    <div class="form-group col-md-3">
        <button type="submit" class="btn btn-sm btn-primary">حذف</button>
    </div>
</form>




















